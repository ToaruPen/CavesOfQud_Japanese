  <command ID="CmdAttackSW" DisplayText="南西を強制攻撃" Category="基本移動／攻撃" Layer="Adventure" Replace="true">
    <keyboardBind Modifier="ctrl" Key="numpad1"/>
    <keyboardBind Modifier="ctrl,shift" Key="leftArrow"/>
